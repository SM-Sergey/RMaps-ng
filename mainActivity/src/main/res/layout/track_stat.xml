            <RelativeLayout
                android:id="@+id/rl1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/distance_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textAppearance="@style/stat_value" >
                </TextView>

                <TextView
                    android:id="@+id/distance_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/distance_data"
                    android:layout_toRightOf="@+id/distance_data"
                    android:paddingLeft="5dp"
                    android:text="TextView"
                    android:textAppearance="@style/stat_unit" >
